                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">Alıntı Sayısı</p>
                        <h4 class="mb-0">@ViewBag.quoteCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
            </div>
        </div>
    </div>
