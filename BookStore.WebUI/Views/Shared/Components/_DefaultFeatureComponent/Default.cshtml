@model List<ResultProductDto>
@*
_DefaultFeatureComponent
*@

<section id="featured-books" class="py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="section-header align-center">
                    <div class="title">
                        <span>Bizim Tavsiyelerimiz</span>
                    </div>
                    <h2 class="section-title">~ Öne Çıkan Kitaplar ~</h2>
                </div>

                <div class="product-list" data-aos="fade-up">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3">
                                <div class="product-item">
                                    <figure class="product-style">
                                        <img src="@item.ImageUrl" alt="Books" class="product-item">
                                        <button type="button" class="add-to-cart" data-product-tile="add-to-cart" data-bs-toggle="modal" data-bs-target="#modalGetDetails_@item.ProductId">
                                            İncele
                                        </button>
                                    </figure>
                                    <figcaption>
                                        <h3>@item.ProductName</h3>
                                        <span>@item.AuthorName</span>
                                        <div class="item-price">₺ @item.ProductPrice</div>
                                    </figcaption>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <div class="btn-wrap align-right">
                    <a href="#" class="btn-accent-arrow">
                        Tüm kitaplara git<i class="icon icon-ns-arrow-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

@foreach (var item in Model)
{
    <div class="modal fade" id="modalGetDetails_@item.ProductId" tabindex="-1" aria-labelledby="modalLabel_@item.ProductId" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content rounded-4 shadow-lg border-0">

                <div class="modal-header bg-primary text-white d-flex justify-content-center text-center">
                    <h5 class="modal-title fw-bold mb-0" id="modalLabel_@item.ProductId">@item.ProductName</h5>
                    <span class="text-light fw-semibold ms-2">/ @item.AuthorName</span>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body p-4">
                    <div class="d-flex flex-column align-items-center">
                        <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid rounded-3 mb-3" style="max-height: 300px; object-fit: cover;">
                        <h6 class="text-center text-muted">Kitap Açıklaması</h6>
                        <p class="card-text text-dark">@item.Description</p>
                    </div>
                </div>

                <div class="modal-footer bg-light d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-outline-success">Sepete Ekle</button>
                </div>
            </div>
        </div>
    </div>
}



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>