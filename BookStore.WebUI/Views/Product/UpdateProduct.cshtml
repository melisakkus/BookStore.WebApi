@model UpdateProductDto
@{
    ViewData["Title"] = "Kitaplar";
    ViewData["Title2"] = "Kitap Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container text-center">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="ProductId" class="form-control" />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Kategorisi</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <label>Yazarı</label>
        <input type="text" asp-for="AuthorName" class="form-control" />
        <br />
        <label>Tanıtımı</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Stok Miktarı</label>
        <input type="number" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Resim</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <button class="btn btn-primary">Kİtap Güncelle</button>
    </form>
</div>
